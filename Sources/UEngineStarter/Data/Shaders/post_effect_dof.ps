#version 330 core

uniform sampler2D colorScene;
uniform sampler2D depthScene;
 
const float blurclamp = 1.0;
const float bias = 0.006;
const float focus = 2.0;

in Vertex
{
  vec3 position;
  vec2 texcoord;
} Vert;

out vec4 color;
 
void main()
{
        float aspectratio = 800.0/600.0;
        vec2 aspectcorrect = vec2(1.0, aspectratio);
        vec4 depth   = texture(depthScene, Vert.texcoord);
        float factor = ( depth.r - focus);
        vec2 dofblur = vec2 (clamp( factor * bias, -blurclamp, blurclamp ));
        vec4 col = vec4(0.0);
       
        col += texture2D(colorScene, Vert.texcoord);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,0.4 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.15,0.37 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,0.29 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.37,0.15 )*aspectcorrect) * dofblur);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.4,0.0 )*aspectcorrect) * dofblur);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.37,-0.15 )*aspectcorrect) * dofblur);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,-0.29 )*aspectcorrect) * dofblur);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.15,-0.37 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,-0.4 )*aspectcorrect) * dofblur); 
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.15,0.37 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,0.29 )*aspectcorrect) * dofblur);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.37,0.15 )*aspectcorrect) * dofblur); 
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.4,0.0 )*aspectcorrect) * dofblur); 
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.37,-0.15 )*aspectcorrect) * dofblur);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,-0.29 )*aspectcorrect) * dofblur);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.15,-0.37 )*aspectcorrect) * dofblur);
       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.15,0.37 )*aspectcorrect) * dofblur*0.9);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.37,0.15 )*aspectcorrect) * dofblur*0.9);           
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.37,-0.15 )*aspectcorrect) * dofblur*0.9);           
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.15,-0.37 )*aspectcorrect) * dofblur*0.9);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.15,0.37 )*aspectcorrect) * dofblur*0.9);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.37,0.15 )*aspectcorrect) * dofblur*0.9);            
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.37,-0.15 )*aspectcorrect) * dofblur*0.9);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.15,-0.37 )*aspectcorrect) * dofblur*0.9);   
       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,0.29 )*aspectcorrect) * dofblur*0.7);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.4,0.0 )*aspectcorrect) * dofblur*0.7);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,-0.29 )*aspectcorrect) * dofblur*0.7);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,-0.4 )*aspectcorrect) * dofblur*0.7);     
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,0.29 )*aspectcorrect) * dofblur*0.7);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.4,0.0 )*aspectcorrect) * dofblur*0.7);     
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,-0.29 )*aspectcorrect) * dofblur*0.7);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,0.4 )*aspectcorrect) * dofblur*0.7);
                         
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,0.29 )*aspectcorrect) * dofblur*0.4);
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.4,0.0 )*aspectcorrect) * dofblur*0.4);       
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.29,-0.29 )*aspectcorrect) * dofblur*0.4);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,-0.4 )*aspectcorrect) * dofblur*0.4);     
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,0.29 )*aspectcorrect) * dofblur*0.4);
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.4,0.0 )*aspectcorrect) * dofblur*0.4);     
        col += texture2D(colorScene, Vert.texcoord + (vec2( -0.29,-0.29 )*aspectcorrect) * dofblur*0.4);   
        col += texture2D(colorScene, Vert.texcoord + (vec2( 0.0,0.4 )*aspectcorrect) * dofblur*0.4);       
                       
        color = col/41.0;		
        color.a = 1.0;
}