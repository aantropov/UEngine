#version 330 core
#define maxLight 8

uniform struct Transform
{
	mat4 model;
	mat4 viewProjection;	
	mat3 normal;
	vec3 viewPosition;
} transform;

in Vertex {	
	vec4 position;
	vec2  texcoord;
	vec3  normal;
} Vert;

out vec4 color[6];

void main(void)
{
	color[0] = texture(material.texture, Vert.texcoord);
	color[1] = vec4(1.0,1.0,1.0,1.0);
	color[2] = material.diffuse;
	color[3] = material.ambient;	
	color[4] = vec4(material.specular.xyz, material.shininess);
	color[5] = Vert.position;
}

